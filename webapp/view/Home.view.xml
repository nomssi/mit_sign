<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="Signature.controller.Home"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>Deliveries} {viewProperties>/updateTime}">
		<content>
			<PullToRefresh id="pullToRefresh" visible="{device>/support/touch}" refresh=".onRefresh"/>
			<!-- This list shows the search results -->
			<List visible="true" 
			    id="eventsList"
			    class="sapUIResponsiveMargin"
			    selectionChange=".onEventListSelect" 
			    noDataText="{i18n>homeNoData}" 
			    busyIndicatorDelay="0"
			    sticky="HeaderToolbar"
				items="{ path : '/Events', 
				         sorter : { path : 'VBELN', 
				                    descending : false },
				         parameters : { 'expand' : 'EventPositions' }
				        }" 
				growing="true"
				growingThreshold="5" 
				growingScrollToLoad="true"
				updateFinished=".onUpdateFinished">				
				<headerToolbar>
					<Toolbar>
						<ToggleButton id="autoSync" icon="sap-icon://synchronize" enabled="true" 
									pressed="true" press="toggleAutoUpdate" />												
						<Title id="tableHeader"
							text="{viewProperties>/listTableTitle}"
							level="H3"/>						
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>SearchTooltip}"
							maxLength="120"
							placeholder="{i18n>SearchRecipient}"
							search=".onFilterEvents"
							width="auto">
							<layoutData>
								<OverflowToolbarLayoutData
									minWidth="150px"
									maxWidth="300px"
									shrinkable="true"
									priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
						<Button text="{i18n>Reset}" type="Transparent" press="onReset"/>
						<OverflowToolbarButton
							id="sortButton"
							press=".onOpenViewSettings"
							icon="sap-icon://sort"
							tooltip="{i18n>SortDialog}"
							type="Transparent"/>
						<OverflowToolbarButton
							id="groupButton"
							press=".onGroupByEvent"
							icon="sap-icon://group-2"
							tooltip="{i18n>GroupDialog}"
							type="Transparent"/>						
					</Toolbar>
				</headerToolbar>
				<items>
					<ObjectListItem type="Navigation" title="{ReceiverPartner}" 
					                press="onEventListItemPress" 
					                intro="{CreatedBy}"
						iconDensityAware="false">
						<attributes>
							<ObjectAttribute text="{VBELN}"/>
						</attributes>
					</ObjectListItem>
				</items>
			</List>
		</content>
	</Page>
</core:View>