<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="Signature.controller.Complete"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="signComplete" title="{i18n>Complete.Title}">
		<MessageStrip class="sapUiSmallMarginBottom" text="{i18n&gt;strip.Finish}" type="Success" showIcon="true"/>
		<content>
			<ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
				<FlexBox direction="Column" renderType="Div" class="sapUiSmallMargin">
					<FlexBox>
						<Button id="homeButtonCompl" type="Emphasized" text="{i18n>homeButtonText}" press=".onHome"/>
					</FlexBox>
					<Text text="Auslieferung {VBELN} wurde verarbeitet. Datei {PDFUrl} wurde erzeugt und an { path: 'ReceiverName', type: 'sap.ui.model.type.String' } versandt."/>
					<PDFViewer source="{/PDFUrl}" title="{/Title}" height="800px" id="PDF" displayType="Embedded">
						<layoutData>
							<FlexItemData growFactor="1"/>
						</layoutData>
					</PDFViewer>
				</FlexBox>
			</ScrollContainer>
		</content>
	</Page>
</core:View>