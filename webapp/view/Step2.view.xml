<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:C="mit_sign.controls"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
		controllerName="mit_sign.controller.Step2" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>SignatureReceiver}"  showNavButton="true" navButtonPress="onNav">
		<content>
		<f:Form id="FormDisplay354" >
                <f:layout>
                  <f:ResponsiveGridLayout labelSpanL="3" labelSpanM="3" emptySpanL="1" emptySpanM="1" columnsL="1" columnsM="1" />
                </f:layout>

				<f:formContainers>
                  <f:FormContainer>
                    <f:formElements>
                      <f:FormElement label="{i18n>lbl.Signer}">
                        <f:fields>
								<Input id="sName" value="{SignerName}" change="onInputChange"/>
                        </f:fields>
                      </f:FormElement>
                      <f:FormElement label="{i18n>lbl.Signature}">
                        <f:fields>
								<C:SignPad id="signature-pad" value="{SignatureString}"
								change="onInputChange"
								width="50%"/>
                        </f:fields>
                      </f:FormElement>
                      <f:FormElement label="">
                        </f:FormElement>
                    </f:formElements>
                  </f:FormContainer>
                </f:formContainers>
			<!-- </f:SimpleForm> -->
			</f:Form>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
               	<Button text="{i18n>Clear}" press="onClearButton" type="Reject" id="btnClear"/>
				<Button text="{i18n>Save}" press="onSaveButton" type="Accept" id="btnSave"/>
				<Button text="{i18n>Continue}" type="Emphasized" press=".onNext" />
			</Toolbar>
		</footer>
	</Page>
</core:View>

