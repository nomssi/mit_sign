<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="mit_sign.controller.Step3" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="PDF" showNavButton="true" navButtonPress="onNav">
		<content>
		<ScrollContainer
			height="100%"
			width="100%"
			horizontal="true"
			vertical="true">
			<FlexBox direction="Column" renderType="Div" class="sapUiSmallMargin">
				<PDFViewer source="{PDFUrl}" title="{/Title}" height="2048px" id="PDF" displayType="Embedded" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</PDFViewer>
			</FlexBox>
		</ScrollContainer>
		</content>
	</Page>
</core:View>