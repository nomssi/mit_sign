<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form"
	controllerName="Signature.controller.Error" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="signError" title="{i18n>Error.Title} Auslieferung {VBELN}" showNavButton="true" 
	      navButtonTooltip="{i18n>homeButtonText}" navButtonPress="onHome">
			<MessageStrip class="sapUiSmallMarginBottom" text="{i18n&gt;strip.Error}" type="Error" showIcon="true"/>
				<MessageView items="{message>/}">
					<MessageItem
						type="{message>type}"
						title="{message>message}"
						subtitle="{message>additionalText}"
						description="{message>description}">
					</MessageItem>
				</MessageView>		
				<footer>
					<Bar id="wizardFooterBar" visible="true">
						<contentLeft>
							<Button id="showPopoverButton" icon="sap-icon://message-popup" type="Emphasized" text="{= ${message&gt;/}.length }"
								press=".handleMessagePopoverPress"/>
						</contentLeft>
					</Bar>
				</footer>				
	</Page>
</core:View>